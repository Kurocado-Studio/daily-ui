{
  "name": "@kurocado-studio/daily-vue",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "preview": "vite preview",
    "build": "storybook build",
    "clean": "rm -rf .turbo node_modules",
    "dev": "storybook dev -p 6007 --no-open",
    "lint": "eslint ./stories/*.stories.ts --max-warnings 0 --no-warn-ignored",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --check . --write",
    "preview-storybook": "serve storybook-static",
    "setup": "pnpm install",
    "ui:local:lib": "pnpm add @kurocado-studio/ui@file:../../../design-system/packages/ui",
    "ui:canary:lib": "pnpm add @kurocado-studio/ui@canary",
    "ui:published:lib": "pnpm add @kurocado-studio/ui@latest",
    "ui:local:sync": "cd ../../../design-system/packages/ui && pnpm run build && cd - && pnpm install @kurocado-studio/ui@file:../../../design-system/packages/ui",
    "storybook": "storybook dev -p 6008",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@kurocado-studio/ui": "1.6.0-develop.4",
    "tailwindcss": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "vue": "^3.5.14"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3",
    "@internal/config": "workspace:*",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-onboarding": "^8.6.13",
    "@storybook/blocks": "^8.6.12",
    "@storybook/experimental-addon-test": "^8.6.12",
    "@storybook/test": "^8.6.14",
    "@storybook/vue3": "^8.6.12",
    "@storybook/vue3-vite": "^8.6.13",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vitest/browser": "^3.1.4",
    "@vitest/coverage-v8": "^3.1.4",
    "autoprefixer": "^10.4.21",
    "playwright": "^1.52.0",
    "postcss": "^8.4.31",
    "semantic-release": "^24.2.4",
    "semantic-release-monorepo": "^8.0.2",
    "storybook": "^8.6.14",
    "typescript": "^5.7.2",
    "vite": "^6.3.5",
    "vitest": "^3.1.4",
    "vue-tsc": "^2.1.10"
  }
}
