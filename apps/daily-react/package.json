{
  "name": "@kurocado-studio/daily-react",
  "version": "0.0.0-semantically-released",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "storybook build",
    "clean": "rm -rf .turbo node_modules",
    "dev": "storybook dev -p 6006 --no-open",
    "lint": "eslint ./stories/*.stories.tsx --max-warnings 0 --no-warn-ignored",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --check . --write",
    "preview-storybook": "serve storybook-static",
    "ui:local:lib": "pnpm add @kurocado-studio/ui@file:../../../design-system/packages/ui",
    "ui:canary:lib": "pnpm add @kurocado-studio/ui@canary",
    "ui:published:lib": "pnpm add @kurocado-studio/ui@latest",
    "ui:local:sync": "cd ../../../design-system/packages/ui && pnpm run build && cd - && pnpm install @kurocado-studio/ui@file:../../../design-system/packages/ui",
    "setup": "pnpm install"
  },
  "dependencies": {
    "@kurocado-studio/ui": "1.6.0-develop.4",
    "isbot": "^5",
    "lucide-react": "^0.292.0",
    "motion": "^12.11.3",
    "postcss": "^8.5.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^3.4.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.6",
    "@internal/config": "workspace:*",
    "@storybook/addon-actions": "^8.6.14",
    "@storybook/addon-docs": "^8.6.14",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.11",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/addon-onboarding": "^8.6.13",
    "@storybook/addon-themes": "^8.6.14",
    "@storybook/blocks": "^8.6.11",
    "@storybook/react": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@storybook/theming": "^8.6.14",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.15.19",
    "@types/react": "19.1.4",
    "@vitejs/plugin-react": "^4.4.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.27.0",
    "postcss": "^8.4.31",
    "semantic-release": "^24.2.4",
    "semantic-release-monorepo": "^8.0.2",
    "serve": "^14.2.1",
    "storybook": "^8.6.11",
    "typescript": "5.8.3",
    "vite": "^6.3.5"
  }
}
